@model FitnessCenterManagement.Models.Trainer
@{
    ViewData["Title"] = "Eğitmeni Düzenle";
}

<div class="container mt-4">
    <h2>Eğitmeni Düzenle</h2>
    <div class="card shadow">
        <div class="card-body">
            <form asp-action="EditTrainer" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label">Salon</label>
                    <select asp-for="GymId" class="form-select" asp-items="ViewBag.Gyms"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label">Ad Soyad</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">E-Posta Adresi</label>
                    <input asp-for="Email" type="email" class="form-control" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Specialty" class="form-label">Uzmanlık Alanı</label>
                    <input asp-for="Specialty" class="form-control" />
                    <span asp-validation-for="Specialty" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-warning mt-3 w-100">Güncelle</button>
            </form>
        </div>
    </div>
</div>