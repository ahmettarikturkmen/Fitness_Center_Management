@model IEnumerable<FitnessCenterManagement.Models.UserViewModel>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>👥 Kullanıcı Listesi</h2>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Ad Soyad</th>
                        <th>E-Posta</th>
                        <th>Rol (Yetki)</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <strong>@user.FullName</strong> <br />
                                <small class="text-muted">Doğum: @(user.BirthDate.HasValue? user.BirthDate.Value.ToShortDateString() : "-")</small>
                            </td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.SelectedRole == "Admin")
                                {
                                    <span class="badge bg-danger">Yönetici</span>
                                }
                                else if (user.SelectedRole == "Trainer")
                                {
                                    <span class="badge bg-primary">Eğitmen</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Üye</span>
                                }
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Düzenle / Rol Ata</a>

                                    @if (User.Identity.Name != user.Email)
                                    {
                                        <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" onsubmit="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?');">
                                            <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Panele Dön</a>
    </div>
</div>