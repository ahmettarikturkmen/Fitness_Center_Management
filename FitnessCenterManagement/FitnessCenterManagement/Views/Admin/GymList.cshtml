@model IEnumerable<FitnessCenterManagement.Models.Gym>

@{
    ViewData["Title"] = "Salon Listesi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Spor Salonları</h2>
        <a asp-action="CreateGym" class="btn btn-success">+ Yeni Salon Ekle</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Salon Adı</th>
                        <th>Adres</th>
                        <th>Çalışma Saatleri</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center p-4">Henüz kayıtlı bir salon yok.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Address</td>
                                <td>@item.OpenHour - @item.CloseHour</td>

                                <td>
                                    <div class="d-flex gap-2">
                                        <a asp-action="EditGym" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>

                                        <form asp-action="DeleteGym" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Bu salonu silmek istediğinize emin misiniz?');">
                                            <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Panele Dön</a>
    </div>
</div>