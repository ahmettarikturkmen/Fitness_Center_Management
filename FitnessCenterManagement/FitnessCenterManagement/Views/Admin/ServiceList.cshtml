@model IEnumerable<FitnessCenterManagement.Models.Service>

@{
    ViewData["Title"] = "Hizmet Listesi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Hizmetler & Dersler</h2>
        <a asp-action="CreateService" class="btn btn-warning text-dark">+ Yeni Hizmet Ekle</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-warning text-dark">
                    <tr>
                        <th>Hizmet Adı</th>
                        <th>Süre</th>
                        <th>Ücret</th>
                        <th>Salon</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center p-4">Henüz kayıtlı hizmet yok.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@item.Name</td>
                                <td>@item.Duration dk</td>
                                <td>@item.Price ₺</td>
                                <td>@item.Gym?.Name</td>

                                <td>
                                    <div class="d-flex gap-2">
                                        <a asp-action="EditService" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Düzenle</a>

                                        <form asp-action="DeleteService" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Bu hizmeti silmek istediğinize emin misiniz?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Sil</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Panele Dön</a>
    </div>
</div>