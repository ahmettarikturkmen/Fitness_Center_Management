@model IEnumerable<FitnessCenterManagement.Models.Service>

@{
    ViewData["Title"] = "Hizmet Listesi";
}

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold text-white m-0">Hizmetler & Dersler</h1>
            <p class="text-secondary m-0 small">Sistemdeki hizmetleri ve fiyatları yönetin.</p>
        </div>
        <a asp-action="CreateService" class="btn btn-success d-flex align-items-center gap-2">
            <span class="material-symbols-outlined">add</span> Yeni Hizmet Ekle
        </a>
    </div>

    <div class="card border-0 shadow-lg" style="background-color: #1c2721; border: 1px solid #283930 !important;">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle" style="color: white;">

                    <thead style="border-bottom: 2px solid #283930;">
                        <tr>
                            <th class="py-3 ps-4" style="color: var(--neon-green);">HİZMET ADI</th>
                            <th class="py-3" style="color: var(--neon-green);">SÜRE</th>
                            <th class="py-3" style="color: var(--neon-green);">ÜCRET</th>
                            <th class="py-3" style="color: var(--neon-green);">SALON</th>
                            <th class="py-3 text-end pe-4" style="color: var(--neon-green);">İŞLEMLER</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-secondary">
                                    <span class="material-symbols-outlined fs-1 d-block mb-3">sentiment_dissatisfied</span>
                                    Henüz kayıtlı hizmet yok.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr style="border-bottom: 1px solid #283930;">
                                    <td class="ps-4 fw-bold">@item.Name</td>
                                    <td>
                                        <span class="d-flex align-items-center gap-2">
                                            <span class="material-symbols-outlined fs-6 text-secondary">schedule</span>
                                            @item.Duration dk
                                        </span>
                                    </td>
                                    <td class="fw-bold text-white">@item.Price ₺</td>
                                    <td class="text-secondary">
                                        @if (item.Gym != null)
                                        {
                                            <span class="d-flex align-items-center gap-2">
                                                <span class="material-symbols-outlined fs-6">apartment</span>
                                                @item.Gym.Name
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="d-flex justify-content-end gap-2">
                                            <a asp-action="EditService" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>

                                            <form asp-action="DeleteService" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Bu hizmeti silmek istediğinize emin misiniz?');" style="display:inline;">
                                                <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary d-inline-flex align-items-center gap-2">
            <span class="material-symbols-outlined">arrow_back</span> Panele Dön
        </a>
    </div>

</div>