@model IEnumerable<FitnessCenterManagement.Models.Trainer>

@{
    ViewData["Title"] = "Antrenör Listesi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Antrenör Kadrosu</h2>
        <a asp-action="CreateTrainer" class="btn btn-primary">+ Yeni Antrenör Ekle</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Uzmanlık</th>
                        <th>Çalıştığı Salon</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center p-4">Henüz kayıtlı antrenör yok.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@item.FullName</td>
                                <td><span class="badge bg-info text-dark">@item.Specialty</span></td>
                                <td>@item.Gym?.Name</td>

                                <td>
                                    <div class="d-flex gap-2">
                                        <a asp-action="EditTrainer" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Düzenle</a>

                                        <form asp-action="DeleteTrainer" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Bu eğitmeni silmek istediğinize emin misiniz?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Sil</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Panele Dön</a>
    </div>
</div>