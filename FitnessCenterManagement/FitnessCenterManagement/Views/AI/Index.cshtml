@model FitnessCenterManagement.Models.ViewModels.AIRequestViewModel

@{
    ViewData["Title"] = "AI Akıllı Koç";
}

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-primary">🤖 AI Akıllı Fitness Koçu</h1>
        <p class="lead text-muted">Vücut bilgilerinizi girin, Yapay Zeka size özel beslenme ve antrenman planı hazırlasın.</p>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">📋 Bilgilerinizi Girin</h5>
                </div>
                <div class="card-body">
                    <form asp-action="GeneratePlan" method="post" id="aiForm">

                        <div class="row mb-3">
                            <div class="col">
                                <label asp-for="Age" class="form-label">Yaş</label>
                                <input asp-for="Age" class="form-control" placeholder="25" />
                                <span asp-validation-for="Age" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <label asp-for="Gender" class="form-label">Cinsiyet</label>
                                <select asp-for="Gender" class="form-select">
                                    <option value="Erkek">Erkek</option>
                                    <option value="Kadın">Kadın</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col">
                                <label asp-for="Height" class="form-label">Boy (cm)</label>
                                <input asp-for="Height" class="form-control" placeholder="180" />
                                <span asp-validation-for="Height" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <label asp-for="Weight" class="form-label">Kilo (kg)</label>
                                <input asp-for="Weight" class="form-control" placeholder="80" />
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ActivityLevel" class="form-label">Aktivite Düzeyi</label>
                            <select asp-for="ActivityLevel" class="form-select">
                                <option value="Hareketsiz (Masa başı)">Hareketsiz (Masa başı)</option>
                                <option value="Az Hareketli (Haftada 1-2 gün spor)">Az Hareketli (1-2 gün spor)</option>
                                <option value="Aktif (Haftada 3-4 gün spor)">Aktif (3-4 gün spor)</option>
                                <option value="Sporcu (Haftada 5+ gün spor)">Sporcu (5+ gün spor)</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Goal" class="form-label fw-bold text-primary">Hedefiniz</label>
                            <select asp-for="Goal" class="form-select">
                                <option value="Kilo Vermek (Yağ Yakımı)">Kilo Vermek (Yağ Yakımı)</option>
                                <option value="Kilo Almak (Hacim)">Kilo Almak (Hacim)</option>
                                <option value="Formu Korumak">Formu Korumak</option>
                                <option value="Kas Kütlesini Artırmak">Kas Kütlesini Artırmak</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2 fw-bold" onclick="showLoading()">
                            ✨ Planımı Oluştur
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div id="loadingArea" class="text-center d-none mt-5">
                <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                    <span class="visually-hidden">Yükleniyor...</span>
                </div>
                <h4 class="mt-3 text-primary">Yapay Zeka Planınızı Hazırlıyor...</h4>
                <p class="text-muted">Lütfen bekleyin, bu işlem birkaç saniye sürebilir.</p>
            </div>

            @if (!string.IsNullOrEmpty(Model.AIResponse))
            {
                <div class="card shadow border-0 h-100">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">✅ Size Özel Hazırlanan Program</h5>
                    </div>
                    <div class="card-body bg-light">
                        <div style="white-space: pre-wrap; font-family: 'Segoe UI', sans-serif; line-height: 1.6;">@Model.AIResponse</div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center text-muted mt-5 pt-5">
                    <i class="bi bi-robot fs-1"></i>
                    <h3 class="mt-3">Sonuçlar Burada Görünecek</h3>
                    <p>Sol taraftaki formu doldurup butona bastığınızda, size özel tavsiyeler buraya gelecek.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function showLoading() {
            // Form geçerliyse yükleniyor ekranını göster
            if ($('#aiForm').valid()) {
                document.getElementById('loadingArea').classList.remove('d-none');
            }
        }
    </script>
}