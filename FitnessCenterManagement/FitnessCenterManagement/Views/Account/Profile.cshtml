@model FitnessCenterManagement.Models.UserProfileViewModel

@{
    ViewData["Title"] = "Profilim";
}

<style>
    /* Profil sayfasına özel koyu inputlar */
    .form-control-dark {
        background-color: #1c2721;
        border: 1px solid #3b5447;
        color: white;
        padding: 10px 15px;
    }

        .form-control-dark:focus {
            background-color: #1c2721;
            color: white;
            border-color: var(--neon-green);
            box-shadow: 0 0 0 0.25rem rgba(19, 236, 128, 0.25);
        }

        .form-control-dark[readonly] {
            background-color: #111814;
            opacity: 0.7;
        }

    .profile-icon-box {
        width: 100px;
        height: 100px;
        background-color: #283930;
        border: 4px solid var(--border-dark);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

<div class="container py-5">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
        <div>
            <h1 class="fw-bold text-white mb-1">Profil Ayarları</h1>
            <p class="text-secondary m-0">Kişisel bilgilerinizi ve hesap güvenliğinizi yönetin.</p>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success d-flex align-items-center py-2 px-3 m-0" role="alert">
                <span class="material-symbols-outlined me-2">check_circle</span>
                <div>@TempData["Success"]</div>
            </div>
        }
    </div>

    <div class="card border-0 overflow-hidden shadow-lg" style="background-color: rgba(28, 39, 33, 0.5); border: 1px solid var(--border-dark) !important;">
        <div class="row g-0">

            <div class="col-lg-6 p-4 p-md-5 border-end border-secondary" style="border-color: var(--border-dark) !important;">

                <div class="d-flex align-items-center gap-4 mb-4">
                    <div class="profile-icon-box">
                        <span class="material-symbols-outlined fs-1 text-secondary">person</span>
                    </div>
                    <div>
                        <h4 class="text-white fw-bold m-0">Kişisel Bilgiler</h4>
                        <small class="text-secondary">Üyelik detaylarınız</small>
                    </div>
                </div>

                <form asp-action="UpdateProfile" method="post">
                    <div class="mb-3">
                        <label class="form-label text-secondary small">Ad Soyad</label>
                        <input asp-for="FullName" class="form-control form-control-dark" />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-secondary small">E-posta Adresi</label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-secondary">
                                <span class="material-symbols-outlined fs-6">mail</span>
                            </span>
                            <input asp-for="Email" class="form-control form-control-dark" readonly />
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label text-secondary small">Doğum Tarihi</label>
                        <input asp-for="BirthDate" type="date" class="form-control form-control-dark" />
                        <span asp-validation-for="BirthDate" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-neon d-flex align-items-center gap-2">
                        <span class="material-symbols-outlined">save</span> Bilgileri Güncelle
                    </button>
                </form>
            </div>

            <div class="col-lg-6 p-4 p-md-5" style="background-color: rgba(0,0,0,0.2);">

                <div class="d-flex align-items-center gap-3 mb-4" style="height: 100px;">
                    <div class="bg-dark rounded-circle p-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                        <span class="material-symbols-outlined text-success">lock_reset</span>
                    </div>
                    <div>
                        <h4 class="text-white fw-bold m-0">Şifre Değiştir</h4>
                        <small class="text-secondary">Hesap güvenliği</small>
                    </div>
                </div>

                <form asp-action="ChangePassword" method="post" class="d-flex flex-column h-75 justify-content-between">
                    <div>
                        <div class="mb-3">
                            <label class="form-label text-secondary small">Yeni Şifre</label>
                            <div class="input-group">
                                <span class="input-group-text bg-dark border-secondary text-secondary">
                                    <span class="material-symbols-outlined fs-6">lock</span>
                                </span>
                                <input asp-for="NewPassword" type="password" class="form-control form-control-dark" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label text-secondary small">Şifreyi Tekrar Girin</label>
                            <div class="input-group">
                                <span class="input-group-text bg-dark border-secondary text-secondary">
                                    <span class="material-symbols-outlined fs-6">lock_reset</span>
                                </span>
                                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-dark" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-outline-light d-flex align-items-center gap-2 w-max mt-auto">
                        <span class="material-symbols-outlined">key</span> Şifreyi Güncelle
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>