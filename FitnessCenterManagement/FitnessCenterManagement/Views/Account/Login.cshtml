@model FitnessCenterManagement.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Giriþ Yap";
}

<style>
    

    /* Sayfa Yapýsý */
    .login-section {
        min-height: calc(100vh - 80px); 
    }

    /* Sol Taraf: Resim Alaný */
    .login-image-col {
        background: url('https://images.unsplash.com/photo-1517836357463-d25dfeac3438?q=80&w=1470&auto=format&fit=crop') center/cover no-repeat;
        position: relative;
    }

    .image-overlay {
        background: rgba(0, 0, 0, 0.6); /* Resmi karart */
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 2rem;
    }

    /* SAÐ TARAF ARKA PLANI (DÜZELTÝLEN KISIM) */
    .login-right-panel {
        background-color: #102219;
        color: white;
    }

    /* Form Konteyner */
    .form-container {
        max-width: 450px;
        width: 100%;
        margin: auto;
    }

    /*  Toggle (Giriþ/Kayýt) Kutusu */
    .auth-toggle-box {
        background-color: #1c2721; /* Daha açýk bir yeþil tonu */
        border: 1px solid var(--border-dark);
        border-radius: 12px;
        padding: 5px;
        display: flex;
        margin-bottom: 2rem;
    }

    .auth-toggle-btn {
        flex: 1;
        text-align: center;
        padding: 10px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.3s;
    }
        /* Aktif (Giriþ Yap) */
        .auth-toggle-btn.active {
            background-color: var(--neon-green);
            color: black;
        }
        /* Pasif (Kayýt Ol) */
        .auth-toggle-btn.inactive {
            color: #9db9ab;
            background-color: transparent;
        }

            .auth-toggle-btn.inactive:hover {
                color: white;
                background-color: rgba(255,255,255,0.05);
            }

    /*  Input Tasarýmý */
    .custom-input-group {
        background-color: #1c392a; /* Input içi yeþilimsi */
        border-radius: 10px;
        display: flex;
        align-items: center;
        padding: 5px 15px;
        border: 1px solid transparent;
        transition: 0.3s;
        margin-bottom: 5px;
    }

        .custom-input-group:focus-within {
            border-color: var(--neon-green);
            box-shadow: 0 0 0 2px rgba(19, 236, 128, 0.2);
        }

        .custom-input-group .material-symbols-outlined {
            color: #6c7d75;
            font-size: 1.2rem;
            margin-right: 10px;
        }

        .custom-input-group input {
            background: transparent;
            border: none;
            color: white;
            width: 100%;
            padding: 12px 0;
            outline: none;
        }

            .custom-input-group input::placeholder {
                color: #6c7d75;
            }

    
    
    input:-webkit-autofill,
    input:-webkit-autofill:hover,
    input:-webkit-autofill:focus,
    input:-webkit-autofill:active {
        -webkit-box-shadow: 0 0 0 30px #1c392a inset !important; /* Arka plan rengi */
        -webkit-text-fill-color: white !important; /* Yazý rengi */
        transition: background-color 5000s ease-in-out 0s;
        caret-color: white; /* Ýmleç rengi */
    }

    /*  Etiketler */
    .custom-label {
        color: white;
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 8px;
        display: block;
    }

    /*  Buton */
    .btn-submit {
        background-color: var(--neon-green);
        color: black;
        font-weight: 700;
        width: 100%;
        padding: 14px;
        border-radius: 12px;
        border: none;
        margin-top: 20px;
        transition: 0.3s;
    }

        .btn-submit:hover {
            background-color: #0fb863;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(19, 236, 128, 0.4);
        }
</style>

<div class="container-fluid p-0">
    <div class="row g-0 login-section">

        <div class="col-lg-6 d-none d-lg-block login-image-col">
            <div class="image-overlay">
                <span class="material-symbols-outlined mb-3" style="font-size: 4rem; color: var(--neon-green);">fitness_center</span>
                <h1 class="display-4 fw-bold text-white mb-3">Potansiyelini Ortaya Çýkar.</h1>
                <p class="lead text-white-50" style="max-width: 400px;">
                    Güç, dayanýklýlýk ve kararlýlýk seni bekliyor. Hemen aramýza katýl.
                </p>
            </div>
        </div>

        <div class="col-lg-6 d-flex align-items-center justify-content-center login-right-panel">
            <div class="form-container p-4">

                <div class="auth-toggle-box">
                    <a href="javascript:void(0)" class="auth-toggle-btn active">Giriþ Yap</a>
                    <a href="/Account/Register" class="auth-toggle-btn inactive">Kayýt Ol</a>
                </div>

                <h2 class="fw-bold text-white mb-1">Tekrar Hoþ Geldin!</h2>
                <p class="text-secondary mb-5">Hesabýna giriþ yaparak devam et.</p>

                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                    <div class="mb-4">
                        <label class="custom-label">E-posta Adresi</label>
                        <div class="custom-input-group">
                            <span class="material-symbols-outlined">mail</span>
                            <input asp-for="Email" type="email" placeholder="ornek@eposta.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small ms-1"></span>
                    </div>

                    <div class="mb-4">
                        <label class="custom-label">Þifre</label>
                        <div class="custom-input-group">
                            <span class="material-symbols-outlined">lock</span>
                            <input asp-for="Password" type="password" id="passwordInput" placeholder="••••••••" />
                            <button type="button" onclick="togglePassword()" style="background:none; border:none; padding:0; display:flex;">
                                <span class="material-symbols-outlined" id="eyeIcon" style="cursor: pointer; margin-right:0;">visibility_off</span>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger small ms-1"></span>
                    </div>

                    <button type="submit" class="btn-submit">
                        Giriþ Yap
                    </button>
                </form>

            </div>
        </div>
    </div>
</div>

<script>
    function togglePassword() {
        var input = document.getElementById("passwordInput");
        var icon = document.getElementById("eyeIcon");
        if (input.type === "password") {
            input.type = "text";
            icon.innerText = "visibility";
        } else {
            input.type = "password";
            icon.innerText = "visibility_off";
        }
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}