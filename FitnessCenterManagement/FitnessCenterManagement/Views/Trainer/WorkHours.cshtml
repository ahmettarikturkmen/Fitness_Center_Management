@model IEnumerable<FitnessCenterManagement.Models.TrainerWorkHour>

@{
    ViewData["Title"] = "Çalışma Saatlerim";
}

<div class="container mt-4">
    <h2>🕒 Çalışma Saatlerimi Düzenle</h2>
    <hr />

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">Yeni Saat Ekle</div>
                <div class="card-body">
                    <form asp-action="AddWorkHour" method="post">
                        <div class="mb-3">
                            <label class="form-label">Gün Seçiniz</label>
                            <select name="dayOfWeek" class="form-select">
                                <option value="1">Pazartesi</option>
                                <option value="2">Salı</option>
                                <option value="3">Çarşamba</option>
                                <option value="4">Perşembe</option>
                                <option value="5">Cuma</option>
                                <option value="6">Cumartesi</option>
                                <option value="0">Pazar</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Başlangıç</label>
                            <input type="time" name="startTime" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Bitiş</label>
                            <input type="time" name="endTime" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-success w-100">Ekle</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Gün</th>
                                <th>Saat Aralığı</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                // Gün ismini sayıdan yazıya çevirme
                                string gunAdi = ((DayOfWeek)item.DayOfWeek).ToString();

                                // Türkçeleştirme (Basit switch)
                                switch (item.DayOfWeek)
                                {
                                    case 1: gunAdi = "Pazartesi"; break;
                                    case 2: gunAdi = "Salı"; break;
                                    case 3: gunAdi = "Çarşamba"; break;
                                    case 4: gunAdi = "Perşembe"; break;
                                    case 5: gunAdi = "Cuma"; break;
                                    case 6: gunAdi = "Cumartesi"; break;
                                    case 0: gunAdi = "Pazar"; break;
                                }

                                <tr>
                                    <td>@gunAdi</td>
                                    <td>@item.StartTime.ToString(@"hh\:mm") - @item.EndTime.ToString(@"hh\:mm")</td>
                                    <td>
                                        <form asp-action="DeleteWorkHour" asp-route-id="@item.Id" method="post">
                                            <button class="btn btn-sm btn-danger">Sil</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">← Panele Dön</a>
    </div>
</div>