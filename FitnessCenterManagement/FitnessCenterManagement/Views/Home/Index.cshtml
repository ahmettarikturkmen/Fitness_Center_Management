@model IEnumerable<FitnessCenterManagement.Models.Gym>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<style>
    /* Hero Alanı (Arkaplan Resmi) */
    .hero-wrap {
        position: relative;
        min-height: 60vh;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        margin-top: -1px;
    }

    .hero-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('/img/gym-hero.jpg') center/cover no-repeat;
        z-index: -1;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to top, var(--bg-dark), rgba(17, 24, 20, 0.6), transparent);
        z-index: -1;
    }

    /* Kart Tasarımı */
    .gym-card {
        background-color: var(--card-dark);
        border: 1px solid var(--border-dark);
        border-radius: 16px;
        padding: 20px;
        height: 100%;
        transition: transform 0.3s ease, border-color 0.3s ease;
    }

        .gym-card:hover {
            transform: translateY(-5px);
            border-color: var(--neon-green);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

    /* İkon Kutusu */
    .icon-box {
        width: 60px;
        height: 60px;
        background-color: rgba(255,255,255,0.05);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
        color: var(--neon-green);
    }
</style>

<div class="hero-wrap text-center">
    <div class="hero-bg"></div>
    <div class="hero-overlay"></div>

    <div class="container position-relative">
        <span class="badge rounded-pill border border-success text-success bg-black px-3 py-2 mb-4">
            YENİ NESİL SPOR
        </span>
        <h1 class="display-3 fw-bolder text-white mb-4">
            Sınırlarını <span style="color: var(--neon-green);">Yok Et.</span>
        </h1>
        <p class="lead text-secondary mx-auto" style="max-width: 600px;">
            Profesyonel eğitmenler ve yapay zeka destekli programlarla hedefine en kısa sürede ulaş.
        </p>

        @if (!User.Identity.IsAuthenticated)
        {
            <div class="mt-4">
                <a href="/Account/Register" class="btn btn-neon btn-lg shadow">
                    Hemen Başla
                </a>
            </div>
        }
    </div>
</div>

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold text-white">Salonlarımız</h2>
        <p class="text-secondary">Size en yakın şubeyi seçin ve randevu alın.</p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var gym in Model)
            {
                <div class="col-md-4">
                    <div class="gym-card d-flex flex-column">
                        <div class="icon-box">
                            <span class="material-symbols-outlined fs-2">fitness_center</span>
                        </div>

                        <h3 class="h4 fw-bold text-white mb-3">@gym.Name</h3>

                        <div class="mb-4 text-secondary">
                            <div class="d-flex align-items-center mb-2">
                                <span class="material-symbols-outlined me-2 fs-5">location_on</span>
                                <small>@gym.Address</small>
                            </div>
                            <div class="d-flex align-items-center">
                                <span class="material-symbols-outlined me-2 fs-5">schedule</span>
                                <small>@gym.OpenHour - @gym.CloseHour</small>
                            </div>
                        </div>

                        <a asp-controller="Appointment" asp-action="Create" asp-route-gymId="@gym.Id"
                           class="btn btn-neon w-100 mt-auto">
                            Randevu Al
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center p-5 gym-card">
            <span class="material-symbols-outlined fs-1 text-secondary mb-3">sentiment_dissatisfied</span>
            <p class="lead text-white">Henüz salon eklenmemiş.</p>
        </div>
    }
</div>