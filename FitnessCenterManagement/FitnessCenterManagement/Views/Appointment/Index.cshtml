@model IEnumerable<FitnessCenterManagement.Models.Appointment>

@{
    ViewData["Title"] = "Randevularım";
}

<div class="container mt-4">
    <h2>Randevularım</h2>
    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Henüz hiç randevunuz bulunmamaktadır. <a asp-controller="Home" asp-action="Index">Hemen randevu al!</a>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Tarih & Saat</th>
                            <th>Salon</th>
                            <th>Hizmet</th>
                            <th>Eğitmen</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AppointmentDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@item.Gym?.Name</td>
                                <td>@item.Service?.Name</td>
                                <td>@item.Trainer?.FullName</td>
                                <td>
                                    @if (item.Status == "Onaylandı")
                                    {
                                        <span class="badge bg-success">Onaylandı</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.Status</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>